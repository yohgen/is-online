---
import type { HTMLAttributes } from 'astro/types';

export type Props = Omit<HTMLAttributes<'blockquote'>, 'class:list'>;

const { class: className, ...props } = Astro.props;
---

<blockquote
  class:list={['my-4 ml-2 border-l-4 border-white pl-2 text-sm text-white md:text-base', className]}
  {...props}
>
  <slot />
</blockquote>
