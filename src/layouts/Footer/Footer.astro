---
import Link from '~/components/Link.astro';
import { LICENSE_URL, SOURCE_URL } from '!config';

const curYear = new Date().getFullYear();
---

<footer class='flex w-full justify-center border-t-[1px] border-t-neutral-400'>
  <nav
    class='my-2 flex w-full max-w-screen-lg flex-row items-center justify-between gap-4 px-4 text-neutral-300'
  >
    <div class='flex flex-nowrap justify-start'>
      <span
        class='mr-0 max-w-0 overflow-hidden whitespace-nowrap transition-[max-width,visibility] max-xs:invisible xs:mr-1 xs:max-w-full'
        >Source on</span
      >
      <Link
        href={SOURCE_URL}
        aria-label='Navigate to the GitHub page for this website'
        class='text-yellow-500 hover:text-yellow-400'
      >GitHub</Link>
    </div>
    <div
      class='flex max-w-0 flex-nowrap gap-4 overflow-hidden transition-[max-width,visibility] max-md:invisible md:max-w-full'
    >
      <span class='whitespace-nowrap line-through'>No privacy</span>
      <span class='whitespace-nowrap line-through'>No terms</span>
      <span class='whitespace-nowrap line-through'>No lightmode</span>
    </div>
    <div class='flex flex-nowrap justify-end gap-1'>
      <Link
        href={LICENSE_URL}
        aria-label='Navigate to the license file'
        class='text-yellow-500 hover:text-yellow-400'
      >
        GPLv3
      </Link>
      <span
        class='ml-0 max-w-0 overflow-hidden whitespace-nowrap transition-[max-width,visibility] max-2xs:invisible 2xs:max-w-full'
      >
        (C) {curYear}
        <Link
          href='/'
          aria-label="Navigate to the author's Home Page"
          class='ml-1 text-green-500 hover:text-green-400'
        >JÃ¸rgen Tau</Link>
      </span>
    </div>
  </nav>
</footer>
